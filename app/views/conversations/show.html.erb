<h1><%= @conversation.title %></h1>

<div class="bg-white p-3 mb-3 border border-secondary"><%== md_to_html(@conversation.body) %></div>

<div>
  <a class="btn btn-primary" href="<%= edit_conversation_path(@conversation) %>">Edit</a>
  <%= link_to "Delete", conversation_path(@conversation), class: "btn btn-danger", data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %>
</div>